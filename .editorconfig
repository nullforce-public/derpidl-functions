# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.bicep]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.cs]
indent_size = 4
indent_style = space
insert_final_newline = true
